# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,ts,vue,yml,prisma,md}]
indent_size = 2

[*.{json,html}]
indent_size = 4

[*.{Dockerfile}]
indent_size = 2
